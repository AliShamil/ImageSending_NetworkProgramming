<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <ProgressBar Grid.Row="1" Name="LoadingIndicator"></ProgressBar>
        <Image Name="ImageBox" Margin="10"></Image>
        <Button  Grid.Row="2" HorizontalAlignment="Right" Width="200" Margin="5" Click="ReceiveScreenshotButton_Click" >Send Request</Button>
    </Grid>
</Window>
